<div class="container">
  <div class="row">
    <div class="col-md-6">
    <h2>New Burgers</h2>

    <ul>
      {{#each burger}}
        {{#unless devoured}}
          {{> burger/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
    </div>
    <div class="col-md-6">
    <h2>Devoured Burgers</h2>

    <ul>
      {{#each burger}}
        {{#if devoured}}
          {{> burger/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
    </div>
    <div class="col">
    <h2>Make a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label for="name">Burger Name:</label>
        <input type="text" id="new-burger" name="name">  <button type="submit">Make Burger</button>
      </div>
    </form>
    </div>
  </div>
</div>
